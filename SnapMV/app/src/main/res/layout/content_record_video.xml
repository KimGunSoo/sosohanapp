<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.sosohan.MVlog.RecordVideoActivity"
    tools:showIn="@layout/activity_record_video">

    <!--android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="#000000">

            <ImageView
                android:id="@+id/big_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:layout_gravity="center" />

        </TableRow -->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center">

            <TextView
                style="@style/TextView_st"
                android:id="@+id/guild_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:text="@string/guide"
                android:layout_gravity="center"
                android:gravity="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="bottom|center_horizontal">

            <ImageView
                android:id="@+id/imageView0"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"

                android:src="@android:drawable/ic_menu_help"
                android:layout_weight="1"
                android:minHeight="90dp"
                android:minWidth="90dp"
                android:layout_gravity="bottom" />
            <ImageView
                android:id="@+id/imageView1"
                android:minHeight="90dp"
                android:minWidth="90dp"
                android:layout_gravity="bottom"
                android:fitsSystemWindows="true"

                android:src="@android:drawable/ic_menu_help"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/imageView2"
                android:minHeight="90dp"
                android:minWidth="90dp"
                android:layout_gravity="bottom"
                android:fitsSystemWindows="true"
                android:src="@android:drawable/ic_menu_help"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/imageView3"
                android:minHeight="90dp"
                android:minWidth="90dp"
                android:layout_gravity="bottom"
                android:fitsSystemWindows="true"
                android:src="@android:drawable/ic_menu_help"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="top|center_vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:minHeight="90dp"
                android:minWidth="90dp"
                android:fitsSystemWindows="true"
                android:src="@android:drawable/ic_menu_help"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/imageView5"
                android:minHeight="90dp"
                android:minWidth="90dp"
                android:fitsSystemWindows="true"
                android:src="@android:drawable/ic_menu_help"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imageView6"
                android:minHeight="90dp"
                android:minWidth="90dp"
                android:fitsSystemWindows="true"
                android:src="@android:drawable/ic_menu_help"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imageView7"
                android:minHeight="90dp"
                android:minWidth="90dp"
                android:fitsSystemWindows="true"
                android:src="@android:drawable/ic_menu_help"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
            style="@style/TextView_st"
            android:id="@+id/new_mv_btn"
            android:gravity="center"
            android:src="@android:drawable/ic_menu_help"
            android:text="Scene"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_span="2" />

        <TextView
            style="@style/TextView_st"
            android:id="@+id/camera_A_btn"
            android:gravity="center"
            android:background="@drawable/round_button"
            android:text="Capture"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                style="@style/TextView_st"
                android:id="@+id/done_btn"
                android:text="Done"
                android:gravity="center"
                android:src="@android:drawable/ic_menu_slideshow"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:layout_gravity="bottom" />
        </TableRow>

    </TableLayout>
</RelativeLayout>
