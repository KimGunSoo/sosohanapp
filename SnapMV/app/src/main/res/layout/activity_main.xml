<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_portrait"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="21.48"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="70"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/SnapMV"
            android:textColor="#ffd700"
            android:textSize="50dp" />

    </LinearLayout>

    <Button
        android:id="@+id/new_video_A_btn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Make new MV log"
        android:textColor="#444444"
        android:textSize="20sp" />
    
    <Button
        android:id="@+id/record_video_A_btn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Load Clip"
        android:textColor="#444444"
        android:textSize="20sp" />

    <Button
        android:id="@+id/setting_A_btn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#444444"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical" >
        
    </LinearLayout>

</LinearLayout>